<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_content"
        android:background="@color/background_material_light"
        android:scrollbars="vertical"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/current_parity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/parity_hint_margin"
                        android:textSize="@dimen/parity_hint_text_size"
                        android:layout_alignParentRight="true"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/parity_hint_margin"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/current_parity"
                        android:textSize="@dimen/parity_hint_text_size"
                        android:text="@string/hint_current_parity"/>

        </RelativeLayout>

        <View style="@style/Divider"/>

        <EditText
            android:id="@+id/group_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_group_index"
            android:singleLine="true"/>

        <Spinner
                android:id="@+id/subgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

</LinearLayout>