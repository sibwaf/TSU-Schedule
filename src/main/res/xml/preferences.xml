<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:key="@string/preference_timeout"
            android:title="@string/preference_timeout_title"
            android:summary="@string/preference_timeout_description"
            android:defaultValue="@string/preference_timeout_default"
            android:inputType="number"/>

    <PreferenceCategory android:title="@string/preference_category_updates">

        <CheckBoxPreference
                android:key="@string/preference_update_auto"
                android:title="@string/preference_update_auto_title"
                android:summary="@string/preference_update_auto_description"
                android:defaultValue="@string/preference_update_auto_default"/>

        <CheckBoxPreference
                android:key="@string/preference_update_allow_prerelease"
                android:title="@string/preference_update_allow_prerelease_title"
                android:summary="@string/preference_update_allow_prerelease_description"
                android:defaultValue="@string/preference_update_allow_prerelease_default"/>

        <Preference android:key="@string/preference_update"/>

        <Preference
                android:key="@string/preference_version"
                android:title="@string/preference_version_title"/>

    </PreferenceCategory>

</PreferenceScreen>